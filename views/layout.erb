        </ul>
      </div>
    </header>
    <div class="container">
      <div>
        <%if @message && @message.length > 0 then %>
          <div class="alert alert-success" role="alert"><%=@message%></div>
        <% end %>
        <%if @error && @error.length > 0 then %>
          <div class="alert alert-danger"><%=@error%></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
